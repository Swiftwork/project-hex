{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "debug",
    "dist",
    "archive"
  ],
  "typeRoots": [
    "node_modules/@types",
    "node_modules"
  ],
  "types": [
    "babylonjs",
    "babylonjs-gui",
    "node"
  ],
  "compileOnSave": false
}
