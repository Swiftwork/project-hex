{
  "name": "project-hex",
  "version": "1.0.0",
  "description": "Turnbased strategy game in typescript",
  "main": "build/index.js",
  "scripts": {
    "postinstall": "typings install",
    "start": "webpack-dev-server --content-base build --inline --progress --port 8080",
    "build:dev": "rimraf build && webpack --progress --profile --development",
    "build:prod": "rimraf build && webpack --progress --profile --bail --production",
    "deploy": "npm run build:prod && ./deploy.sh"
  },
  "keywords": [
    "isomorphic",
    "game",
    "typescript"
  ],
  "author": "Erik Hughes",
  "license": "ISC",
  "devDependencies": {
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.22.0",
    "path": "^0.12.7",
    "pug": "^2.0.0-beta5",
    "pug-loader": "^2.2.1",
    "rimraf": "^2.5.4",
    "ts-loader": "^0.8.2",
    "typescript": "^1.8.10",
    "typings": "^1.3.2",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.0",
    "webpack-merge": "^0.14.1"
  },
  "dependencies": {
    "babylonjs": "^2.4.0",
    "core-js": "^2.4.1",
    "handjs": "^1.3.11"
  }
}
